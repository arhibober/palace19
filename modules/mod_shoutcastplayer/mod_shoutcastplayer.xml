<config>
<fields name="params">
<fieldset name="basic"> 
<field name="name" type="text" default="TestRadio" label="Radio Title" description="Title of the Radio (without space!!!)" />
<field name="skin" type="list" default="ffmp3-compact" label="Skin" description="Choose the skin of the player">
	<option value="ffmp3-dimedia">ffmp3-dimedia</option>
	<option value="ffmp3-compact">ffmp3-compact</option>
	<option value="ffmp3-darkconsole">ffmp3-darkconsole</option>
	<option value="ffmp3-eastanbul">ffmp3-eastanbul</option>
	<option value="ffmp3-mcclean">ffmp3-mcclean</option>
	<option value="ffmp3-mcclean">ffmp3-tweety</option>
	<option value="faredirfare">faredirfare</option>
</field>
<field name="autostart" type="list" default="yes" label="Auto Start" description="Start Radio automatic?">
	<option value="true">Yes</option>
	<option value="false">No</option>
</field>
<field name="url" type="textarea" default="" label="ShoutCast URL" description="URL and Port of the ShoutCast Stream" cols="40" rows="1" />	
</fieldset>

<fieldset name="advanced">
	<field name="introurl" type="textarea" default="" label="Intro Audio File" description="If you want to play an audio file befor the stream, enter a url (Optional)" cols="40" rows="1" />	
	
	<field name="track" type="list" default="Yes" label="Allow tracking?" description="Allows us to improve the module and let us know where are the users from">
	<option value="true">Yes</option>
	<option value="false">No</option>
	</field>
</fieldset>
</fields>
